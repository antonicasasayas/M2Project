<!-- Main Body -->

<section class="feed">

  <div class="container">
    <div class="notifications">
      <h3 id="not-title">Notifications</h3>
      
      {{#each users}}
      <hr class="style-two">
      <p id="white">{{username}}</p>
      
      
      {{#each favorites}}


      <p id="white2"> <i class="fas fa-heart"></i> {{title}}</p>
      {{/each}}
      

      {{/each}}
    </div>
    
    <div class="row justify-content-center">

      <div id= "centercol" class="col-sm-5 col-md-8 col-12 pb-4 mt-5">

        <div class="col-lg-8 col-md-5 col-sm-4  offset-md-2 offset-sm-1 col-12 mt-10">
          <h3 id="main-title">Comment something</h3>
          <hr class="style-two">
          <form action="/private/feed" method="POST" id="algin-form">
            <div class="form-group">
              <textarea name="content" id="tweet" msg cols="30" rows="5" class="form-control"
                style="background-color: #14181c;"></textarea>
            </div>


            <div class="form-group"> <button type="submit" id="post" class="btn">Post </button> </div>
          </form>
        </div>
        
        {{#each posts}}

        <div id="comments" class="text-justify darker mt-5 float-right "> 
          <img src="https://i.imgur.com/CFpa3nK.jpg"
           alt="" class="rounded-circle" width="40" height="40">
          <h4>{{user_id.username}}</h4> <span></span> <br>
          <p id="comment">{{content}}</p>
          <div>
          {{#if this.isEditable}}
          <form style="margin: 0; padding: 0;" id="editbtn" action="/private/{{_id}}/edit" method="GET">
            <button class="btn btn-dark" id="editbutton" href="/private/{{_id}}/edit">Edit</button>
          </form>

          <form style="margin: 0; padding: 0;" id="delbtn" action="/private/{{_id}}/delete" method="POST">
            <button class="btn btn-dark" id="deletebutton" type="submit">Delete</button>
          </form>
          </div>
          </div>
        
        {{/if}}
        {{#unless this.isEditable}}
          <form style="margin: 0; padding: 0;" id="editbtn" action="/private/{{_id}}/edit" method="GET">
            <button  style="display: none;" class="btn btn-dark" id="editbutton" href="/private/{{_id}}/edit">Edit</button>
          </form>
          
          <form style="margin: 0; padding: 0;"  id="delbtn" action="/private/{{_id}}/delete" method="POST">
            <button style="display: none;" class="btn btn-dark" id="deletebutton" type="submit">Delete</button>
          </form>
          </div>
          </div>
        {{/unless}}
        {{/each}}
      </div>
      <div class= "watch-column">
        <h3 id= "lol">Watchlist</h3>
      {{#each users}}
      <hr class="style-two">
      <p id="white">{{username}}</p>
      
      
        {{#each watchlist}}
        <p id="white2"> <i class="fas fa-eye"></i> {{title}}</p>
        {{/each}}
        {{/each}}
        </div>
    </div>
  </div>
</section>



